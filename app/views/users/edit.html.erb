<div class="row">
  <div class="small-12 medium-10 large-8 small-centered columns edit_profile_box">
    <div class="row">
      <div class="small-4 columns">
        <%= image_tag @user.profile_photo, class: 'profile-circle' %>
      </div>
      <div class="small-8 columns">
        <h3> Edit Profile</h3>
        <%= form_for (@user) do |f| %>
          <%= f.label :city, "City" %>
          <%= f.text_field :city %>

          <%= f.label :state, "State" %>
          <%= f.select :state, options_for_select(us_states), {}, class: 'form-control' %>

          <%= f.label :location, "Home Library" %>
          <%= f.text_field :location %>

          <%= f.label :about_me, "Tell us about yourself" %>
          <%= f.text_field :about_me %>

          <%= f.label :language, 'What languages do you know?' %>
          <%= f.text_field :language %>

          <%= f.label :subject, "Subjects" %>
          <%= f.text_field :subject %>

          <%= f.file_field :profile_photo %>

          <%= f.submit "Edit" %>

        <% end %>

      </div>
    </div>

  </div>

</div>
