<div class="row">
  <div class="small-8 large-8 small-centered columns profile_box">
    <div class="row">
      <div class="small-4 columns">
        <%= image_tag @user.profile_photo, class: 'profile-circle' %>
      </div>
      <div class="small-8 columns">

        <h1 class="profile-name"><%= @user.first_name%> <%=@user.last_name%></h1>
        <div class="small-8 columns">
          <ul>
            <% if @user.is_student? %>
            <li><%= "Student" %></li>
            <% else %>
            <li><%= "Tutor" %></li>
            <% end %>
            <li>Home Library: <%= @user.location %> </li>
            <li><%= @user.city %> <%= @user.state %> </li>
            <li><%= @user.email %></li>
          </ul>
        </div>
        <div class="small-4 columns">
          <% if @user == current_user %>
            <%= link_to "Edit Profile", edit_user_path, class: 'button' %>
          <% end %>
        </div>
        <p><% if @user != current_user %>
          <%= link_to 'Send message', new_message_path(to: @user.id), class: 'button' %>
        <% end %></p>
      </div>
      <hr>
      <div class="row">
        <div class="small-4 columns profile-body"
        <p>About me: <%= @user.about_me %></p>
        <p>Languages spoken: <%= @user.language %></p>
        <% if @user.is_student? %>
          <p>Looking for help with: <%= @user.subject %></p>
        <% else %>
          <p>Available to help with: <%= @user.subject %></p>
          <% end %>
        </div>
        <div class="small-8 columns profile-body">
        </div>
      </div>
    </div>
  </div>
</div>
