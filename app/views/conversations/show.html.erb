<h1><%= @conversation.subject %></h1>
<div class="row">
  <div class="messages">
    <% @conversation.receipts_for(current_user).each do |receipt| %>
      <% message = receipt.message %>
      <%= message.sender.name %>
        says at <%= message.created_at.strftime("%-d %B %Y, %H:%M:%S") %>
      <%= message.body %>
    <% end  %>
  </div>
</div>
